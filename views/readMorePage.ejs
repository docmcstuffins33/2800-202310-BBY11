<%- include("templates/header") %>
<style>
  body {
    background-color: #fff8d6;
  }

  h1 {
    font-size: 35px;
    font-weight: bold;
    text-align: center;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    letter-spacing: 2px;
    color: #333;
  }

  .btn-light:hover {
    background-color: #cbb279;
    border-color: #cbb279;
  }

  .btn-light {
    background-color: #e1d4bb;
    border-color: #e1d4bb;
  }

  .card {
    border: none;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    background-color: #f4b183;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    color: #333333;
    font-family: "Gill Sans", "Gill Sans MT", Calibri, "Trebuchet MS",
      sans-serif;
    color: #333;
    font-size: large;
    height: 480px;
   overflow-y: auto;
  }

  .close-icon {
    position: absolute;
    top: 10px;
    right: 10px;
    color: #999;
  }

  .btn-favorite {
    position: absolute;
    top: 10px;
    right: 10px;
    padding: 6px;
    background-color: transparent;
    border: none;
  }

  .card-title {
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 1rem;
  }

  .card-text {
    margin-bottom: 10px;
    line-height: 1.5;
    font-size: large;
  }

  @media (max-width: 576px) {
    .card-body {
      padding: 15px;
    }

    .close-icon,
    .btn-favorite {
      top: 5px;
      right: 5px;
    }

    .card-title {
      font-size: 1.1rem;
    }
  }
</style>

<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <a href="/" onclick="history.go(-1); return false;"
            ><button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button
          ></a>
          <% if (loggedIn) { %>
          <button
            class="btn btn-light"
            id="favourite"
            style="position: absolute; top: 20px; right: 20px;"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
            >
              <path
                d="M6.28 3c3.236.001 4.973 3.491 5.72
                  5.031.75-1.547 2.469-5.021 5.726-5.021 2.058 0 4.274 1.309
                  4.274 4.182 0 3.442-4.744 7.851-10
                  13-5.258-5.151-10-9.559-10-13 0-2.676 1.965-4.193
                  4.28-4.192zm.001-2c-3.183 0-6.281 2.187-6.281 6.192 0 4.661
                  5.57 9.427 12 15.808 6.43-6.381 12-11.147 12-15.808
                  0-4.011-3.097-6.182-6.274-6.182-2.204 0-4.446 1.042-5.726
                  3.238-1.285-2.206-3.522-3.248-5.719-3.248z"
              />
            </svg>
          </button>
          <% } %>
          <h5 class="card-title" id="dishTitle"><%= dish.name %></h5>
          <% if(dish.numFavs == undefined) { %>
          <p class="card-text">Number of favourites: 0</p>
          <% } else { %>
          <p class="card-text">Number of favourites: <%= dish.numFavs %></p>
          <% } %>
          <p class="card-text">Description: <%= dish.description %></p>
          <p class="card-text">Ingredients: <%= dish.ingredients %></p>
          <p class="card-text">Steps: <%= dish.steps %></p>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // JavaScript
  const favouriteButton = document.getElementById("favourite");
  const dishTitle = document.getElementById("dishTitle");
  favouriteButton.addEventListener("click", callFavourite);

  function callFavourite() {
    $.ajax({
      url: `/favourite?dishName=${dishTitle.innerHTML}`, // Assuming the server handles requests to '/function' endpoint
      method: "POST", // Use 'POST' if the function requires additional data
      success: function (response) {
        // Handle the server response if needed
        console.log(response);
      },
      error: function (error) {
        console.error("Error:", error);
      },
    });
  }
</script>

<%- include("templates/footer") %>
