<%- include("templates/header") %>

<div class="container">
  <h1>Hello, <%= username %></h1>

  <div class="container-fluid">
    <h3>User Information</h3>
    <table class="table table-hover table-centered">
      <thead>
        <tr>
          <th scope="col">Username</th>
          <th scope="col">Email</th>
        </tr>
      </thead>
      <tbody>
          <tr>
            <td>
              <%= username %>
            </td>
            <td>
              <%= email %>
            </td>
            <td>
              <%= password %>
            </td>
          </tr>
      </tbody>
    </table>
    </body>
  </div>

  <div class="dropdown">
