<%- include("templates/header") %>

<style>
  body {
    background-color: #FFF8D6;
  }

  h1 {
    font-size: 35px;
    font-weight: bold;
    text-align: center;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    letter-spacing: 2px;
    color: #333;
  }
</style>

<h1 style="font-family: 'Arial', sans-serif; color: #333; margin-top: 50px; margin-bottom: 30px;">History</h1>

<div class="history">
  <% if (dishes.length === 0) { %>
    <br>
    <p style="text-align: center;">No items in history yet!</p>
    <br>
  <% } else { %>
    <% for (let i = dishes.length - 1; i > -1; i--) { %>
      <%- include("templates/logCard", { dish: dishes[i], page: "logPage" }) %>
    <% } %>
  <% } %>
</div>

<%- include("templates/footer") %>
